                // неактуально:
                // int nomMenu; // номер пункта меню
        };
        struct  Menushka
        {
                int xPos;
                int yPos;
                int addrMenuN; //адреса менюшки
                int indexParentMenu; // індекс батьківської менюшки в масиві
                size_t maxLenPunkt; //кількість символів найдовшого пункта
                size_t activePunktIndex; // індекс активного пункта
                vector<PunktMenushka> arrPunkt; // масив пенктів
                // неактуально:
                // int indexMenu; //індекс менюшки в масиві
                // int levelMenu; // рівень меню
                // int nomParrentMenu; //номер пункта верхнього левела
        };

        vector<Menushka> menu; // масив менюшок
        int activeMenushkaIndex;
        WORD activeMenuColor;
        WORD activePunctColor;
        WORD inactiveMenuColor;
        WORD inactivePunctColor;

        void printMenushka(bool gray = 0, int indMenu = -1) const;
        void printMenushkaBlack(int indMenu = -1) const;
        void goUp();
        void goDown();
        int goEnter(bool Enter=1);
        void goEsc(bool Ecs=1);
public:
        Menu(WORD actMCol = 7 | 4 << 4, WORD actPCol = 15 | 12 << 4, WORD inactMCol = 7 | 0 << 4, WORD inactPCol = 7 | 1 << 4);
        bool addMenu(int addr);
        bool addPunkt(int addrMenuNum, string name);
        int runMenu(int addr=0);

};

